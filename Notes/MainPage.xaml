<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20">
            <Editor
                Placeholder="Digite alguma coisa seu(sua) bobalhão (bobalhona)"
                HeightRequest="250"
                x:Name="CaixaEditor"
                Text=""/>
            <HorizontalStackLayout
                Spacing="80">
                <Button
                    x:Name="SalvarTextBtn"
                    Text="Salvar"
                    SemanticProperties.Hint="Para salvar o texto"
                    Clicked="SalvarTextBtn_Clicked"/>
                <Button
                    x:Name="ApagarTextBtn"
                    Text="Apagar"
                    SemanticProperties.Hint="Para apagar o texto"
                    Clicked="ApagarTextBtn_Clicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
